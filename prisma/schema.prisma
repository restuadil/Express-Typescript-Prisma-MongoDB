generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  username   String   @unique
  password   String
  first_name String?
  last_name  String?
  address    Address?
  role       Role     @default(USER)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

type Address {
  province    String?
  city        String?
  street      String?
  postal_code String?
}

model Product {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("products")
}
